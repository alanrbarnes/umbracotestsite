@using LWCCWebsite.Core.UmbracoModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.SocialMedia>
@using ContentModels = LWCCWebsite.Core.UmbracoModels;
@{
	Layout = "Main.cshtml";
	
    var heroOverlayColor = Model.Value<string>("heroOverlayColour");}

@if (!string.IsNullOrEmpty(heroOverlayColor))
{

  <style>
      .home-hero > .overlay {
            background-color: #@heroOverlayColor;
          opacity: 0.5;
          }
      
  </style>
  
}


<!-- Insert Hero Image -->
@await Html.PartialAsync("Hero")

<!-- Latest Tweets --> 
<div class="container mt-4">
    <div class="row" style="height: 20em;">
        <div class="col">
            @await Umbraco.RenderMacroAsync("GetLatestTweets", new {twitterHandle="DrBillWinston"})
        </div>
    </div>
</div>