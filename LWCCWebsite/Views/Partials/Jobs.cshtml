@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<div class="container-fluid">
    <div class="row" style="margin-top:4em;margin-bottom:4em;background:#e2e2e2;padding:4em 2em;">
        <div class="col-12 col-lg-11 col-xl-10 col-xxl-8 mx-auto">
            <div class="row">
                <div class="col-12 col-lg-6 col-xxl-4 my-auto">
                    <div style="clip-path:polygon(85% 0%, 100% 50%, 85% 100%, 0% 100%, 0% 0%);background-color:#fcfdc6;padding:4em 2em;">
                        <div>
                            <img class="d-block" src="images/temp/LWCC_wave_logo.png" alt="Logo">
