@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models
@{
    var pickedImage = Model.Value<MediaWithCrops>("heroImage");
}

<style>
</style>

<!-- Hero Section  -->
<div class="hero-background" style="background: url('@pickedImage.MediaUrl()') no-repeat top left / cover;">
    <div class="overlay"></div>
    <div class="container h-100">
        <div class="row h-100 hero-text-row">
            <div class="col-11 col-md-6 offset-1 offset-md-6">
                <div class="hero-text">
                    <!-- Your hero text here -->
                    <h1 class="display-4">@Model.Value("heroTitle")</h1>
                    <p class="lead">@Model.Value("heroSubtitle")</p>
                </div>
            </div>
        </div>
    </div>

</div>

