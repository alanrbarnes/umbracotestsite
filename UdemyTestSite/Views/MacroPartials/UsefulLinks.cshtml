@inherits Umbraco.Cms.Web.Common.Macros.PartialViewMacroPage
@using Umbraco.Web.Models
@{
    var usefulLinks = Model.Content.Value<IEnumerable<IPublishedElement>>("linkNestedContent");
}

@if(usefulLinks != null) {
    <h2>Useful Links</h2>
    <ul>
        @foreach(var lnk in userfulLInks){
        
            <!--Get lnk as link datatype-->
            var url = lnk.Value<Link>("linkUrl").Url;
            <li>
                <a href="@url">
                    <i class="@lnk.Value("linkIcon")"></i>
                </a>
                @lnk.Value("linkText") @url @lnk.Value("linkIcon")
            </li>
        }
    </ul>
}