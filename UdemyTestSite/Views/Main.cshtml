@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@* @addTagHelper ClientDependency.Core.Mvc; *@

@{
	Layout = null;

  //pick up dynamic generated model, gives a handle to home page so that children of homepage can be seen
  var homePage = Model.AncestorOrSelf<Home>(); 
  
  var mediaItem = Umbraco.Media(1206); // Replace 1234 with the ID of your media item
  var imageUrl = mediaItem?.Url();
}
<html>
    <head>
    <!-- Scripts, css etc -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css"  />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/css/CookieConsent.css"/>
    <link rel="stylesheet" href="/css/RTE.css"/>
    <link rel="stylesheet" href="/css/BlockGridCss.css"/>
    <link rel="stylesheet" href="/css/carousel_custom_styles.css" />


    <style>
        a { text-decoration: none;}

        #top-bar a { color: #fff; }
        #navigation, .navbar {
            background-image: url('@imageUrl');
        }
    </style>

    @RenderSection("head", false)
    </head>
    <body>
        
        <!-- Top bar goes here -->
        @await Html.PartialAsync("TopBar")

        <!-- Nav goes here -->
        @await Html.PartialAsync("NavBar")
        
        @RenderBody()
        
        <!-- Footer -->
         @await Html.PartialAsync("Footer")
        
        <!-- Cookie Consent -->
        <div class="alert text-center cookiealert" role="alert">
          <b>Do you like cookies?</b> &#x1F36A; We use cookies to ensure you get the best experience on our website. <a href="/privacy/" target="_blank">Learn more</a>
          <button type="button" class="btn btn-primary btn-sm acceptcookies">
            I agree
          </button>
        </div>


        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" ></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js"></script>
        <!-- Validation libraries-->
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <script src="/scripts/CookieConsent.js" ></script>
    

    </body>
</html>